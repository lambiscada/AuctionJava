<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">${hibernate.dialect}</property>
        <property name="hibernate.show_sql">${hibernate.show_sql}</property>
        <property name="hibernate.format_sql">${hibernate.format_sql}</property>
        <property name="hibernate.use_sql_comments">${hibernate.use_sql_comments}</property>

        <mapping class="es.udc.is.isg019.subastador.model.usuario.Usuario" />
        <mapping class="es.udc.is.isg019.subastador.model.tarjetabanco.TarjetaBanco" />
        <mapping class="es.udc.is.isg019.subastador.model.categoria.Categoria" />
        <mapping class="es.udc.is.isg019.subastador.model.puja.Puja" />
        <mapping class="es.udc.is.isg019.subastador.model.producto.Producto" />
    </session-factory>
</hibernate-configuration>